extends layout

block content
  h1= title
  p Update manufacturer


  ul
    each manufacturer in list_manufacturers 
      if manufacturer.id === currentId 
        form(method='POST' action=' ' )
          input(type='text', name='name', value=manufacturer.name )
          |
          input(type='text', name='id', value=currentId)
          |
          input(type='submit', value='update')
          |
          input(type='submit', value='delete')
      else 
        li= manufacturer.name

        form(action=manufacturer.url + '/update')
          button(type=) edit button

  a() Add Manufacturer 